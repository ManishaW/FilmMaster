<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="login-block">
 <h1>Sign In</h1>
    <%= f.label :email, :class => "fontforinput" %><br /> 
    <%= f.email_field :email, :placeholder => "Email address", :class => "fontforinput", :autofocus => true%>
  
    <%= f.label :password,:class => "fontforinput" %><br />
    <%= f.password_field :password, :placeholder => "Password", autocomplete: "off", :class => "fontforinput",:autofocus => true %>
  

  

  <% if devise_mapping.rememberable? -%>
    
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, :class => "remembermebox" %>
   
  <% end -%>


    <%= f.submit "Log in", :class => "button" %>

  
<% end %> 
</div>
<%= render "devise/shared/links" %>

</body>